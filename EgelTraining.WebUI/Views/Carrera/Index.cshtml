@model IEnumerable<EgelTraining.Domain.Entities.Carrera>


@{
    ViewBag.Title = "Carreras: Todas";
    Layout = "~/Views/Shared/_CarrerasLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Carreras</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">Carrera</th>
                <th>Nombre</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach(var carrera in Model)
            {
                <tr>
                    <td class="text-right">@carrera.Siglas</td>
                    <td>@Html.ActionLink(carrera.NombreLargo, "Edit",new {carrera.Siglas})</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Carrera"))
                        {
                            @Html.Hidden("Siglas",carrera.Siglas)
                            <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                        }

                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="panel-footer">
        @Html.ActionLink("Añadir Carrera","Create",null,new {@class = "btn btn-default" })
    </div>     
</div>



