@model IEnumerable<EgelTraining.Domain.Entities.PlanEstudio>

@{
    ViewBag.Title = "Planes";
    Layout = "~/Views/Shared/_CarrerasLayout.cshtml";}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Planes</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">Siglas</th>
                <th>Nombre</th>
                <th>Plan</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var plan in Model)
            {
                <tr>
                    <td class="text-right">@plan.Siglas</td>
                    <td>@Html.ActionLink(plan.Carrera.NombreLargo, "Edit", new { plan.Siglas, plan.Plan })</td>
                    <td>@plan.Plan</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "PlanEstudio"))
                        {
                            @Html.Hidden("Siglas", plan.Siglas)
                            @Html.Hidden("Plan",plan.Plan)
                            <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                        }

                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="panel-footer">
        @Html.ActionLink("Añadir Plan", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>
