@model IEnumerable<EgelTraining.Domain.Entities.Tema>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Temas</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                @*<th class="text-right">ID</th>*@
                <th>Siglas</th>
                <th>Nombre</th>
                <th class="text-center"></th>
            </tr>
            @foreach (var tema in Model)
            {
                <tr>
                    <td>@tema.ClaveTema</td>
                    <td>@Html.ActionLink(tema.NombreTema, "Edit", new { tema.ClaveTema })</td>
                 
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "AdminTema"))
                        {
                            @Html.Hidden("claveTema", tema.ClaveTema)
                            <input type="submit" class="btn btn-danger btn-xs" value="Delete" />
                        }

                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="panel-footer">
        @Html.ActionLink("Crear Tema", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>
